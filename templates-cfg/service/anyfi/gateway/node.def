tag:
priority: 999
type: txt
help: Anyfi Gateway
end:
     if [ ${COMMIT_ACTION} == DELETE ]; then
         sudo kill -TERM $(sudo cat /var/run/anyfi-gateway-$VAR(@).pid)
         sudo rm -f /etc/anyfi-gateway-$VAR(@).conf
     else
         if [ -f /var/anyfi-gateway-$VAR(@).pid ]; then
             sudo kill -TERM $(sudo cat /var/run/anyfi-gateway-$VAR(@).pid)
         fi

         if [ -z "$VAR(controller/@)" ]; then
            echo "Error configuring Anyfi Gateway: Must specify Controller"
            exit 1
         fi

         if /bin/cli-shell-api exists service anyfi gateway $VAR(@) port-range; then
             port_range=`/bin/cli-shell-api returnValue service anyfi gateway $VAR(@) port-range`
             start_port="-p `echo $port_range | awk -F '-' '{print $1}'`"
         else
             start_port=""
         fi

         sudo /opt/vyatta/sbin/vyatta-anyfi-gateway.pl --instance=$VAR(@) --config=/etc/anyfi-gateway-$VAR(@).conf || exit 1 
         if [ -f /var/run/anyfi-gateway-$VAR(@).pid ]; then
             sudo kill -TERM $(sudo cat /var/run/anyfi-gateway-$VAR(@).pid)
         fi
         sudo /usr/sbin/anyfi-gateway --accept-license -C $VAR(controller/@) $start_port -B -P /var/run/anyfi-gateway-$VAR(@).pid /etc/anyfi-gateway-$VAR(@).conf 
     fi

